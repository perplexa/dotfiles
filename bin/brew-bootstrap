#!/bin/bash

brew update
brew upgrade

# system
brew install coreutils
brew install findutils
brew install moreutils
brew install gnu-sed

# tmux
brew install tmux

# vim
brew install ctags
brew install vim

# monitoring
brew install htop
brew install netcat
brew install nmap

# media
brew install ffmpeg
brew install yt-dlp

# development
brew install jq
brew install yq

# pack
brew install p7zip
brew install unrar

# crypto
brew install gnupg

# zsh
brew install chroma

# casks
casks=(
  alacritty lulu obsidian oversight sloth stats vlc
)

for cask in "${casks[@]}"; do
    brew install "$cask"
done

