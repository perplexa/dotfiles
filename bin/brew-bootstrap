#!/bin/bash

brew update
brew upgrade

# system
brew install coreutils
brew install findutils
brew install moreutils
brew install gnu-sed

# tmux
brew install tmux

# vim
brew install ctags
brew install vim

# monitoring
brew install htop
brew install netcat
brew install nmap

# media
brew install ffmpeg
brew install youtube-dl

# development
brew install jq

# pack
brew install p7zip
brew install unrar

# crypto
brew install gnupg

# sync
brew install syncthing

# cask
brew install homebrew/cask-cask

# casks
casks=(
  1password alacritty db-browser-for-sqlite keybase
  macdown macpass qsyncthingtray skype slack steam
  vlc yed
)

for cask in "${casks[@]}"; do
    brew cask install "$cask"
done

