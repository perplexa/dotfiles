#!/bin/bash

brew update
brew upgrade

# system
brew install coreutils
brew install findutils
brew install moreutils
brew install gnu-sed

# tmux
brew install tmux

# vim
brew install ctags
brew install vim

# monitoring
brew install htop
brew install netcat
brew install nmap

# media
brew install ffmpeg
brew install yt-dlp

# development
brew install jq

# pack
brew install p7zip
brew install unrar

# crypto
brew install gnupg

# sync
brew install syncthing

# cask
#brew install homebrew/cask-cask

# casks
casks=(
  alacritty qsyncthingtray vlc
)

for cask in "${casks[@]}"; do
    brew install "$cask"
done

